doctype html
html(lang='en')
  include ../common/header.pug
  +head("Lodos E2")
  body.bg-secondary
    header
      include ../common/navbar.pug
      +navbar(user)
    br
    br
    h1
    br
    .container
      .row
        .col-sm-12.offset-md-2.col-md-8
          .jumbotron.p-4
            h2.text-center.mb-5 Login
            .row
              .col-sm-12.col-md-12.col-xs-12
                form(action='/login', method='POST')
                  div.formgroup.pl-5.pr-5
                    input(placeholder='Username', required=true, name='username', type='text', value='').form-control
                    br
                    input(placeholder='Password',required=true, name='password', type='password', value='').form-control
                    div.text-center
                      button.mt-3.btn.btn-dark(type='submit') Log in

    include ../common/footer.pug
    +footer()