doctype html
html(lang='en')
  include ../common/header.pug
  +head("Lodos E2")
  header
    include ../common/navbar.pug
    +navbar(user)
  sidebar
    include ../common/sidebar.pug
    +sidebar(user)
  body.bg-secondary
    .container
      form#connection-information-form
        b Hostname or IP Address:
        input#host(type="text" name="host" value="postman.cloudmqtt.com")
        br
        b Port:
        input#port(type="text" name="port" value="33787")
        br
        b Username:
        input#username(type="text" name="username" value="")
        br
        b Password:
        input#password(type="password" name="password" value="")
        br
        b Topic:
        input#topic(type="text" name="topic" value="abc")
        br
        br
        h1(id="data") Data: No Data
        div.text-center
          input.btn.btn-dark(type="button" onclick="startConnect()" value="Connect")
          input.ml-3.btn.btn-dark(type="button" onclick="startDisconnect()" value="Disconnect")
      #messages

    include ../common/footer.pug
    +footer()
    script(src="https://cdnjs.cloudflare.com/ajax/libs/paho-mqtt/1.0.2/mqttws31.min.js" type="text/javascript")
    script(src="http://code.jquery.com/jquery-1.10.1.min.js" type="text/javascript")
    script(src="/javascripts/app.js" type="text/javascript")