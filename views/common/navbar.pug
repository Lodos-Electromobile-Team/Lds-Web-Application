    a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.md-2
      img(src="/images/icon.png", width="50", height="50")
    .collapse.navbar-collapse
    .navbar-right
      if user
        span.mr-3.navbar-text #{user.name} #{user.lastname}
